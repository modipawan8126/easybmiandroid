<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.has7.easybmi.BMIActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"

        android:scrollbars="vertical"
        android:weightSum="1"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            android:weightSum="1"
            tools:ignore="MissingConstraints"
            >

            <RadioGroup
                android:id="@+id/sex"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="male"
                    android:textSize="16dp"/>

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="female"
                    android:textSize="16dp"/>

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            android:weightSum="1"
            tools:ignore="MissingConstraints"
             >

            <EditText
                android:id="@+id/height"
                android:layout_width="110dp"
                android:gravity="center"
                android:layout_height="45dp"
                android:layout_below="@+id/weight"
                android:hint="height in cm"
                android:maxLength="6"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/weight"
                android:layout_width="110dp"
                android:gravity="center"
                android:layout_height="45dp"
                android:layout_below="@+id/button2"
                android:layout_marginLeft="10dp"

                android:hint="weight in kg"
                android:maxLength="6"
                android:inputType="numberDecimal" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="0.04"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:visibility="visible"
            android:weightSum="1"
            android:gravity="center"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="5dp">

            <Button
                android:id="@+id/button2"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_below="@+id/textView4"
                android:text="Calculate BMI"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="245dp"
                tools:text="Calculate BMI" />

            <TextView
                android:id="@+id/bmi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.17"
                android:fadingEdge="horizontal|vertical"
                android:fontFamily="monospace"
                android:text="BMI"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/bmimessage"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.17"
                android:gravity="center"
                android:fadingEdge="horizontal|vertical"
                android:fontFamily="monospace"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/bmiuser"
                android:scaleType="center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <TextView
                android:id="@+id/timestamp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.17"
                android:gravity="center"
                android:fadingEdge="horizontal|vertical"
                android:fontFamily="monospace"
                android:textAlignment="center"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/socialshare"
                android:scaleType="center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/shareresize"/>

            <TextView
                android:id="@+id/authorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.16"
                android:fontFamily="cursive"
                android:textAlignment="center"
                android:textSize="10pt"
                android:text="Designed Developed by JayPawSoft" />


        </LinearLayout>

    </LinearLayout>


</ScrollView>
